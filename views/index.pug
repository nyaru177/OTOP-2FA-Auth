doctype html
html(lang="zh")
  head
    title 首页
    style.
      /* 基本样式 */
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f4f4f9;
      }
      .container {
        text-align: center;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        width: 300px;
      }
      p {
        font-size: 18px;
        margin-bottom: 20px;
      }
      a {
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 4px;
        background-color: #28a745; /* 修改为绿色 */
        color: white;
        transition: background-color 0.3s;
      }
      a:hover {
        background-color: #218838; /* 修改为绿色的深色 */
      }
  body
    .container
      header
        h1 欢迎, #{user.username}
      main
      if !user
        p 未登录
        a(href='/login') 登录
      else
        a(href='/logout') 登出
